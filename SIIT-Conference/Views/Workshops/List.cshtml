@model IEnumerable<SIIT_Conference.Models.WorkshopDto>

@{
    ViewData["Title"] = "List";
}
<div class="container-p3">
    <div class="row pt-4">
        <div class="col-6 text-left">
            <h1>Workshops List</h1>
            <br />
            <a asp-action="Create" asp-controller="Workshops" class="btn btn-info">Create New Item</a>
        </div>
    </div>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.ID)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlacesAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prerequisites)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlacesAvailable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prerequisites)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>
                <td>
                    <a asp-controller="Workshops" asp-action="Edit" asp-route-ID="@item.ID" class="btn btn-primary">Update</a>
                    <a asp-controller="Workshops" asp-action="Delete" asp-route-ID="@item.ID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
